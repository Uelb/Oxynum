#encoding: utf-8
<%= javascript_include_tag "parallax", "facebook" %>
<div class="logo"><a href="/" title="Oxygene numerique">Oxygene Numerique</a></div>
<div class="wrapper">
	<h1>Add new dream</h1>
	<%= form_tag :action => 'create' do %>	
	<label for="user_gender_true"><%= radio_button 'user', :gender, true, :class => 'radio_button' %>Homme</label>
	<label for="user_gender_false"><%= radio_button 'user', :gender, false, :class => 'radio_button' %>Femme</label>
	<div class="clear"></div>
	<%= text_field 'user', :username , :placeholder => 'Pseudo', :class => 'text_field', :required => true %>
	<%= text_area 'dream', :message, :placeholder => 'Inscrivez votre rêve le plus fou', :class => 'text_area', :required =>true %>
	<%= hidden_field 'user', :fb_first_name %>
	<%= hidden_field 'user', :fb_last_name %>
	<%= hidden_field 'user', :location %>
	<%= hidden_field 'user', :fb_id %>
	<%= hidden_field 'user', :fb_status %>
	<%= submit_tag "Déposez votre rêve et découvrez ceux des autres", :class => 'submit' %>
	<%= link_to 'Retour à la page d\'accueil', root_path %>
	<% end %>
	<div class="cloud cloud_blue">*</div>
	<div class="cloud cloud_grey">*</div>
	<div class="cloud cloud_white">*</div>
</div>
<div class="fb-login-button" scope="email,user_interests,user_status,user_birthday">Se connecter avec Facebook</div>
<script>
FB.api('/me', function(user)
{
	$('#user_fb_first_name').attr('value',user.first_name);
	$('#user_fb_last_name').attr('value',user.last_name);
	$('#user_location').attr('value',user.location.name);
	$('#user_fb_id').attr('value',user.id);
	$('#user_fb_status').attr('value',user.quotes);
	//$('.fb-login-button').hide();
	if(user.gender == "male"){
		$('#user_gender_true').attr('checked', 'checked');
	}
	else{
		$("#user_gender_false").attr('checked', 'checked');
		}
});
</script>
